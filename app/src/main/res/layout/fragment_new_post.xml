<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Post Title"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher_pollster_icon_24dp"
        android:id="@+id/choose1"
        android:layout_below="@+id/select1_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/select2_text"
        android:text="@string/selImg2"
        android:layout_below="@+id/choose1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"/>

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher_pollster_icon_24dp"
        android:id="@+id/choose2"
        android:layout_marginTop="18dp"
        android:layout_alignTop="@+id/select2_text"
        android:layout_alignLeft="@+id/choose1"
        android:layout_alignStart="@+id/choose1" />

    <TextView
        android:text="@string/selImg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/select1_text"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_below="@+id/spinnerCategory"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/saveNewPost"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:entries="@array/categories"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_alignTop="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />


</RelativeLayout>